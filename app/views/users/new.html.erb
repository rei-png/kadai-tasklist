<h1>ユーザ新規登録</h1>

<%= form_with(model: @user, local: true) do |f| %>
    
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
      
  <%= f.label :email, "Email" %>
  <%= f.email_field :email %>
      
  <%= f.label :password, "Password" %>
  <%= f.password_field :password %>      
  
  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>    
      
  <%= f.submit "登録" %>
<% end %>

<%= link_to "戻る", root_path %>